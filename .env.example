# API endpoint (deployed URL from `modal deploy`)
VITE_API_URL=https://YOUR_WORKSPACE--gooni-api.modal.run
PUBLIC_BASE_URL=https://YOUR_WORKSPACE--gooni-api.modal.run
APP_ENV=development
ENABLE_DOCS=0

# Session/CORS policy for cookie-based auth (backend env)
GENERATION_SESSION_TTL_SECONDS=86400
ADMIN_SESSION_IDLE_TIMEOUT_SECONDS=43200
SESSION_COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=none
FRONTEND_ORIGINS=http://34.73.173.191,http://localhost:5173,http://127.0.0.1:5173

# Video lane / degraded queue controls
VIDEO_LANE_WARM_MIN_CONTAINERS=1
VIDEO_LANE_WARM_MAX_CONTAINERS=1
VIDEO_ANISORA_MIN_CONTAINERS=1
VIDEO_ANISORA_MAX_CONTAINERS=1
VIDEO_PHR00T_MIN_CONTAINERS=1
VIDEO_PHR00T_MAX_CONTAINERS=1
VIDEO_DEGRADED_MIN_CONTAINERS=0
VIDEO_DEGRADED_QUEUE_MAX_DEPTH=25
VIDEO_DEGRADED_QUEUE_MAX_WAIT_SECONDS=30
VIDEO_LANE_HEALTH_GRACE_SECONDS=60
VIDEO_LANE_ASSIGNMENT_TIMEOUT_SECONDS=30

# CUDA allocator anti-fragmentation for heavy model switching
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True
